@model CRUDAPPDEMO.Models.Teacher

@{
    ViewData["Title"] = "Add Teacher";
}

<div class="row">
    <div class="col-12 col-md-8 offset-md-2">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0"><i class="fa-solid fa-plus-circle me-2"></i> Add Teacher</h5>
                    <small class="text-muted">Create a new teacher record</small>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to list</a>
            </div>

            <div class="card-body">
                <form asp-action="Create" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    @await Html.PartialAsync("_TeacherForm", Model)

                    <div class="mt-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-save me-1"></i> Save
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

