@model IEnumerable<CRUDAPPDEMO.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<div class="row mb-3">
    <div class="col-md-8">
        <h2 class="mb-0"><i class="fa-solid fa-chalkboard-user me-2"></i>Teachers</h2>
        <small class="text-muted">Manage teachers — view, edit or remove records</small>
    </div>
    <div class="col-md-4 d-flex justify-content-md-end align-items-center mt-3 mt-md-0">
        <div class="me-2" style="width:100%; max-width:360px;">
            <input id="tableSearch" class="form-control" placeholder="Search by name, email or course..." />
        </div>
        <a class="btn btn-success ms-2" asp-action="Create"><i class="fa-solid fa-plus me-1"></i>Create</a>
    </div>
</div>

<div class="card card-hero mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table id="teachersTable" class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:60px;">#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Course</th>
                        <th style="width:180px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var index = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@index</td>
                                <td>@Html.DisplayFor(m => item.Name)</td>
                                <td>@Html.DisplayFor(m => item.Email)</td>
                                <td>@Html.DisplayFor(m => item.Course)</td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id" title="Details">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="m-0" onsubmit="return confirmDelete(this);">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">No teachers found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const input = document.getElementById('tableSearch');
            const table = document.getElementById('teachersTable');
            const tbody = table && table.querySelector('tbody');

            input && input.addEventListener('input', function () {
                const q = this.value.trim().toLowerCase();
                if (!tbody) return;
                const rows = Array.from(tbody.querySelectorAll('tr'));
                if (!q) {
                    rows.forEach(r => r.style.display = '');
                    return;
                }
                rows.forEach(r => {
                    const text = r.innerText.toLowerCase();
                    r.style.display = text.indexOf(q) > -1 ? '' : 'none';
                });
            });
        })();

        function confirmDelete(form) {
            return confirm('Are you sure you want to delete this teacher?');
        }
    </script>
}
